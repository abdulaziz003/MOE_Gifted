<% momentHijri.locale("en") %>

  <div class="container">
    <img class="mb-4" src="/img/MOElogo.png" alt="" width="125" height="72">
    <h1 class="h3 mb-3 font-weight-normal">عرض بيانات الاختبار </h1>

    </br>


    <%if(user != undefined){%>
      <small>
        <%=user.name%> سجل هذا الاختبار
      </small>
      <%}else{%>
        <div class="text-right alert alert-warning" role="alert">
          المدخل غير معروف
        </div>
        <%}%>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="exam-name">اسم الاختبار</label>
            </div>
            <div class="col-sm-8">
              <input name='name' type="text" disabled id="exam-name" class="form-control" placeholder="اسم الاختبار" required autofocus
                value="<%= exam.name %>">
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="total-mark">الدرجة الاجمالية</label>
            </div>
            <div class="col-sm-8">
              <input name='totalMark' type="text" disabled id="total-mark" class="form-control mt-2" placeholder="الدرجة الاجمالية" required
                autofocus value="<%= exam.totalMark %>">
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="paper-date">تاريخ التسجيل</label>
            </div>
            <div class="col-sm-8">
              <div class="input-group date">
                <%let gda = momentHijri(exam.createdAt).format("YYYY-MM-DD")%>
                  <input name='createdAt' type="text" disabled id="paper-date" class="form-control mt-2" placeholder="تاريخ التسجيل" required
                    autocomplete="off" value="<%= momentHijri(gda, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="paper-date">تاريخ آخر تحديث</label>
            </div>
            <div class="col-sm-8">
              <div class="input-group date">
                <%let gda2 = momentHijri(exam.updatedAt).format("YYYY-MM-DD")%>
                  <input name='updatedAt' type="text" disabled id="paper-date" class="form-control mt-2" placeholder="تاريخ آخر تحديث" required
                    autocomplete="off" value="<%= momentHijri(gda2, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="paper-date">تاريخ آخر تحديث</label>
            </div>
            <div class="col-sm-8">
              <div class="input-group date">
                <%let gda3 = momentHijri(exam.publishedAt).format("YYYY-MM-DD")%>
                  <input name='publishedAt' type="text" disabled id="paper-date" class="form-control mt-2" placeholder="تاريخ نشر الاختبار" required
                    autocomplete="off" value="<%= momentHijri(gda3, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>


          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label form="paper-subject">عدد الطلاب المسجلين بالاختبار</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input name='exams' type="text" disabled id="paper-subject" class="form-control mt-2" placeholder="عدد الطلاب" required value="<%= exam.students.length %>">
            </div>
          </div>


          <div class="text-right  row">
            <div class="col-sm-2 align-self-center">
              <label>الحالة</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input class="form-control mt-2" value="<%= exam.isActive ? 'مفعل' : 'غير مفعل' %>" disabled>
            </div>
          </div>



          <a class="btn btn-info mt-5" href="/exams">العودة</a>
  </div>