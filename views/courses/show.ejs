<% momentHijri.locale("en") %>

  <div class="container text-center">
    <img class="mb-4" src="/img/MOElogo.png" alt="" width="125" height="72">
    <h1 class="h3 mb-3 font-weight-normal">عرض بيانات البرنامج الاثرائي </h1>

    </br>


    <%if(user != undefined){%>
      <small>
        <%=user.name%> ادخل بيانات البرنامج
      </small>
      <%}else{%>
        <div class="text-right alert alert-warning" role="alert">
          المدخل غير معروف
        </div>
        <%}%>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="course-name">اسم البرنامج</label>
            </div>
            <div class="col-sm-8">
              <input name='name' type="text" disabled id="course-name" class="form-control" placeholder="اسم البرنامج" required autofocus
                value="<%= course.name %>">
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="duration">مدة البرنامج</label>
            </div>
            <div class="col-sm-8">
              <input name="duration" type="text" disabled id="duration" class="form-control mt-2" placeholder="مدة البرنامج" required
                autofocus value="<%= course.duration %>">
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="course-createdAt">تاريخ الانشاء</label>
            </div>
            <div class="col-sm-8">
              <div class="input-group date">
                <%let gda = momentHijri(course.createdAt).format("YYYY-MM-DD")%>
                  <input name='createdAt' type="text" disabled id="course-createdAt" class="form-control mt-2" placeholder="تاريخ التسجيل" required
                    autocomplete="off" value="<%= momentHijri(gda, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="course-updatedAt">تاريخ آخر تحديث</label>
            </div>
            <div class="col-sm-8">
              <div class="input-group date">
                <%let gda2 = momentHijri(course.updatedAt).format("YYYY-MM-DD")%>
                  <input name='updatedAt' type="text" disabled id="course-updatedAt" class="form-control mt-2" placeholder="تاريخ آخر تحديث" required
                    autocomplete="off" value="<%= momentHijri(gda2, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>

          <div class="text-right row">
            <div class="col-md-2 align-self-center">
              <label for="course-year">العام</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input name='publishedAt' type="text" disabled id="course-year" class="form-control mt-2" placeholder="العام" required value="<%= course.publishedAt %>">
            </div>
          </div>

          <div class="text-right  row">
            <div class="col-sm-2 align-self-center">
              <label>عدد الطلاب المسجلين</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input class="form-control mt-2" placeholder="عدد الطلاب" value="<%= course.students.length%>" disabled>
            </div>
          </div>


          <div class="text-right  row">
            <div class="col-sm-2 align-self-center">
              <label>حالة البرنامج</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input class="form-control mt-2" value="<%= course.isActive ? 'مفعل' : 'غير مفعل' %>" disabled>
            </div>
          </div>



          <a class="btn btn-info mt-5" href="/courses">العودة</a>
  </div>