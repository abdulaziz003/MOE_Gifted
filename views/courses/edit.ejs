<% momentHijri.locale("en") %>
<form action="/courses/<%=course.id%>?_method=put" method="POST">
  <div class="container text-center">
    <img class="mb-4" src="/img/MOElogo.png" alt="" width="125" height="72">
    <h1 class="h3 mb-3 font-weight-normal">تعديل بيانات البرنامج الاثرائي </h1>

    </br>


    <%if(user != undefined){%>
      <small>
        <%=user.name%> ادخل بيانات البرنامج
      </small>
      <%}else{%>
        <div class="text-right alert alert-warning" role="alert">
          المدخل غير معروف
        </div>
        <%}%>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="course-name">اسم البرنامج</label>
            </div>
            <div class="col-sm-8">
              <input name='name' type="text" id="course-name" class="form-control" placeholder="اسم البرنامج" required autofocus
                value="<%= course.name %>">
            </div>
          </div>

          <div class="text-right row mt-2">
            <div class="col-sm-2 align-self-center">
              <label for="duration">مدة البرنامج</label>
            </div>
            <div class="col-sm-8">
              <input name="duration" type="text" id="duration" class="form-control" placeholder="مدة البرنامج" required autofocus
                value="<%= course.duration %>">
            </div>
          </div>

          <div class="text-right row mt-2">
            <div class="col-sm-2 align-self-center">
              <label for="duration">العام</label>
            </div>
            <div class="col-sm-8">
              <select name="publishedAt" id="level-3-year" class="form-control">
                <% for( let index = 1410; index < 1490; index++ ) { %>
                  <% if(course.publishedAt == index){ %>
                    <option selected value="<%= index %> ">
                      <%= index %>
                    </option>
                  <% }else { %>
                    <option value="<%= index %> ">
                      <%= index %>
                    </option>
                  <% } %>
                <% } %>
              </select>
            </div>
          </div>


          <div class="text-right  row mt-2">
            <div class="col-sm-2 align-self-center">
              <label>عدد الطلاب المسجلين</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input class="form-control" placeholder="عدد الطلاب" value="<%= course.students.length%>" disabled>
            </div>
            <div class="col-sm-2 mt-3">
              <a class="btn btn-sm btn-info " href="/courses/register/<%= course.id %>">اضافة طلاب</a>
            </div>
          </div>


          <div class="text-right  row mt-2">
            <div class="col-sm-2">
              <label>حالة تفعيل البرنامج</label>
            </div>
            <div class="col-sm-1">
              <input name="isActiveChecked" type="checkbox" id="course-is-active-checkbox" class="form-control" value="<%= course.isActive %>" <%= course.isActive ? 'checked' : 'unchecked' %> onclick="changeCourseActive()">
            </div>
          </div>


          <button class="btn btn-success mt-4" type="submit">حفظ التغيرات</button>
          <a class="btn btn-info mt-4" href="/courses">العودة</a>
  </div>

</form>
