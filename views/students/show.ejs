<% momentHijri.locale("en") %>

  <div class="container text-center">
    <img class="mb-4" src="/img/MOElogo.png" alt="" width="125" height="72">
    <h1 class="h3 mb-3 font-weight-normal">عرض بيانات طالب </h1>

          </br>


          <%if(user != undefined){%>
            <small>
              <%=user.name%> ادخل بيانات الطالب
            </small>
            <%}else{%>
              <div class="text-right alert alert-warning" role="alert">
                المدخل غير معروف
              </div>
              <%}%>

                <div class="text-right row">
                  <div class="col-sm-2 align-self-center">
                    <label for="student-name">اسم الطالب</label>
                  </div>
                  <div class="col-sm-8">
                    <input name='name' type="text" disabled id="student-name" class="form-control" placeholder="اسم الطالب" required
                      autofocus value="<%= student.name %>">
                  </div>
                </div>

                <div class="text-right row">
                  <div class="col-sm-2 align-self-center">
                    <label for="national-id">رقم السجل المدني</label>
                  </div>
                  <div class="col-sm-8">
                    <input name='nationalID' type="text" disabled id="national-id" class="form-control mt-2" placeholder="رقم السجل المدني" required
                      autofocus value="<%= student.nationalID %>">
                  </div>
                </div>

                <div class="text-right row">
                  <div class="col-sm-2 align-self-center">
                    <label for="paper-date">تاريخ التسجيل</label>
                  </div>
                  <div class="col-sm-8">
                    <div class="input-group date">
                      <%let gda = momentHijri(student.createdAt).format("YYYY-MM-DD")%>
                        <input name='createdAt' type="text" disabled id="paper-date" class="form-control mt-2" placeholder="تاريخ التسجيل" required
                          autocomplete="off" value="<%= momentHijri(gda, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                  </div>
                </div>

                <div class="text-right row">
                  <div class="col-sm-2 align-self-center">
                    <label for="paper-date">تاريخ آخر تحديث</label>
                  </div>
                  <div class="col-sm-8">
                    <div class="input-group date">
                      <%let gda2 = momentHijri(student.updatedAt).format("YYYY-MM-DD")%>
                        <input name='updatedAt' type="text" disabled id="paper-date" class="form-control mt-2" placeholder="تاريخ آخر تحديث" required
                          autocomplete="off" value="<%= momentHijri(gda2, " YYYY-M-D ").format("iYYYY/iM/iD ") %>">
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                  </div>
                </div>

                <div class="text-right row">
                  <div class="col-md-2 align-self-center">
                    <label for="paper-from">المدرسة</label>
                  </div>
                  <div class="col-sm-8 align-self-center">
                    <input name='school' type="text" disabled id="paper-from" class="form-control mt-2" placeholder="المدرسة" required value="<%= student.school %>">
                  </div>
                </div>


                <div class="text-right row">
                  <div class="col-sm-2 align-self-center">
                    <label form="paper-subject"> الاختبارات المجتازة</label>
                  </div>
                  <div class="col-sm-8 align-self-center">
                      <input name='exams' type="text" <%= student.exam_level_1.isTaken ? "" : "hidden" %>  disabled id="paper-subject" class="form-control-inline mt-2" placeholder="الاختبارات" required
                        value="<%= student.exam_level_1.name %>">
                      <input name='exams' type="text" <%= student.exam_level_2.isTaken ? "" : "hidden" %> disabled id="paper-subject" class="form-control-inline mt-2" placeholder="الاختبارات" required
                        value="<%= student.exam_level_2.name %>">
                      <input name='exams' type="text" <%= student.exam_level_3.isTaken ? "" : "hidden" %> disabled id="paper-subject" class="form-control-inline mt-2" placeholder="الاختبارات" required
                        value="<%= student.exam_level_3.name %>">
                  </div>
                </div>

                <div class="text-right  row">
                  <div class="col-sm-2 align-self-center">
                    <label>الدورات</label>
                  </div>
                  <div class="col-sm-8 align-self-center">
                    <% enrolledCourses.forEach(course => { %>
                      <input class="form-control mt-2" placeholder="الدورات" value="<%= course.name%>" disabled>
                      <button class="btn btn-sm btn-warning mt-2">طباعة الشهادة</button>
                    <% }) %>
                  </div>
                </div>


                <div class="text-right  row">
                  <div class="col-sm-2 align-self-center">
                    <label>حالة الطالب</label>
                  </div>
                  <div class="col-sm-8 align-self-center">
                    <input class="form-control mt-2" value="<%= student.isActive ? 'مفعل' : 'غير مفعل' %>" disabled>
                  </div>
                </div>

                
                
                <a class="btn btn-info mt-5" href="/students">العودة</a>
</div>