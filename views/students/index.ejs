<h2>جميع الطلاب</h2>
<form action="/students" method="get">
  <label for="author-name">اسم الطالب</label>
  <input type="text" name="name" id="author-name" value="<%= searchOptions.name%>">
  <button type="submit">بحث</button>
</form>
<br>

<a class="btn btn-success" href="/students/new">اضافة طالب جديد</a>

<br>
<br>
<% if(students.length > 0 ){ %>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">اسم الطالب</th>
        <th scope="col">السجل المدني</th>
        <th scope="col">المدرسة</th>
        <th scope="col">عدد الاختبارات</th>
        <th scope="col">الاجراءات</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <!-- On rows -->
        <tr>
          <td>
            <%= student.name %>
          </td>
          <td>
            <%= student.nationalID %>
          </td>
          <td>
            <%= student.school %>
          </td>
          <td>
            <%= student.exams.length %>
          </td>
          <td>
            <span>
              <a class="btn btn-sm btn-success" href="/students/<%=student.id%>">عرض </a>
            </span>
            <span>
              <a class="btn btn-sm btn-info" href="/students/<%=student.id%>/edit">تعديل </a>
            </span>
              <%- include('../partials/deleteForm', { url: `/students/${student.id}` }) %>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <% }else{ %>
    <h4>لايوجد طلاب</h4>
    <% } %>