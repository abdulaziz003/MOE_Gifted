
<form action="/students/<%=student.id%>?_method=put" method="POST">
  <div class="container text-center">
    <img class="mb-4" src="/img/MOElogo.png" alt="" width="125" height="72">
    <h1 class="h3 mb-3 font-weight-normal">تعديل بيانات طالب </h1>

    </br>


    <%if(user != undefined){%>
      <small>
        <%=user.name%> ادخل بيانات الطالب
      </small>
      <%}else{%>
        <div class="text-right alert alert-warning" role="alert">
          المدخل غير معروف
        </div>
        <%}%>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="student-name">اسم الطالب</label>
            </div>
            <div class="col-sm-8">
              <input name='name' type="text"  id="student-name" class="form-control" placeholder="رقم السجل المدني" required autofocus
                value="<%= student.name %>">
            </div>
          </div>

          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label for="national-id">رقم السجل المدني</label>
            </div>
            <div class="col-sm-8">
              <input name='nationalID' type="number"  id="national-id" class="form-control mt-2" placeholder="رقم السجل المدني" required
                autofocus value="<%= student.nationalID %>">
            </div>
          </div>




          <div class="text-right row">
            <div class="col-md-2 align-self-center">
              <label for="paper-from">المدرسة</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input name='school' type="text"  id="paper-from" class="form-control mt-2" placeholder="المدرسة" required value="<%= student.school %>">
            </div>
          </div>


          <div class="text-right row">
            <div class="col-sm-2 align-self-center">
              <label form="paper-subject">الاختبارات</label>
            </div>
            <div class="col-sm-8 align-self-center">
              
              <%- include('_levels') %> 


            </div>
          </div>

          <div class="text-right  row">
            <div class="col-sm-2 align-self-center">
              <label>الدورات</label>
            </div>
            <div class="col-sm-8 align-self-center">
              <input class="form-control mt-2" placeholder="الدورات" value="<%= student.courses%>" >
            </div>
          </div>


          <div class="text-right  row">
            <div class="col-sm-2 align-self-center">
              <label>مفعل</label>
            </div>
            <div class="text-right col-sm-1">
              <input name="isActive" type="checkbox" class="form-control mt-2" <%= student.isActive ? "checked" : "unchecked" %> >
            </div>
          </div>

            <button class="btn btn-success mt-4" type="submit">حفظ التغيرات</button>
            <a class="btn btn-info mt-4" href="/students">العودة</a>
          
 </div>
</form>